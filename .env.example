# Autonomous Dev Team Configuration
# Copy this file to .env and fill in the values

# Claude API (required)
ANTHROPIC_API_KEY=sk-ant-api03-...

# Discord Bot (required for Mastermind)
DISCORD_BOT_TOKEN=your-bot-token

# Discord Channel IDs (required)
DISCORD_BUGS_CHANNEL_ID=123456789
DISCORD_DEVLOG_CHANNEL_ID=123456789
DISCORD_ALERTS_CHANNEL_ID=123456789
DISCORD_DEPLOY_CHANNEL_ID=123456789

# Target Application (the app being tested)
FAMILY_ARCHIVE_HOST=localhost
FAMILY_ARCHIVE_PORT=8003
FAMILY_ARCHIVE_USE_HTTPS=false

# GitHub (for PR creation)
GH_TOKEN=ghp_...
GITHUB_REPO=username/repo

# Codebase Path (where Mastermind makes changes)
CODEBASE_PATH=/path/to/target/repo

# Docker (if using Docker deployment)
DOCKER_HOST=localhost
DOCKER_PORT=2375

# Safety Limits
DAILY_COST_LIMIT=10.00
MAX_CONCURRENT_FIXES=3
FIX_TIMEOUT_MINUTES=30

# Claude Model for agent reasoning (optional)
CLAUDE_AGENT_MODEL=claude-sonnet-4-20250514
